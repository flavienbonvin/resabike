extends layout


block extraHeadersClient
    script(src="/js/client/cancelBooking.js")
    link(rel="stylesheet", href="/css/client/cancelBooking.css")

block contentClient

    h4.ui.dividing.header= langs.titleConfirmBookCancel
    form(method='POST')
        table.ui.celled.table
            thead
                tr
                    th= langs.tableTitleSchedule
                    th= langs.tableTitleName
                    th= langs.labelEmail
                    th= langs.labelNumberOfBikes
                    th= langs.tableTitleStartStation
                    th= langs.tableTitleEndStation
                
            tbody
                tr
                    td= book.trips[0].startHour
                    td= book.pseudo
                    td= book.email
                    td= book.number
                    td= book.startStationBook.name
                    td= book.endStationBook.name
        button.ui.button()= langs.buttonConfirmDelete
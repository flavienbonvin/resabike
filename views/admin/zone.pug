extends layout

block extraHeadersAdmin
    link(rel="stylesheet", href="/css/admin/addZone.css")
    script(src="/js/admin/addZone.js")

block contentAdmin
    form.ui.form(method="post", action="/admin/zone")
        h4.ui.dividing.header= titleAddNewZone
        div.required.field
            label= langs.labelZoneName
            class.ui.input
                input(name="zoneName")
        div.field
            button.ui.button= langs.buttonCreate
    div#modifZone
        h4.ui.dividing.header= langs.titleEditZone
        div#pastModif.ui.bulleted.list
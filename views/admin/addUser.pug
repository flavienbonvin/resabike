extends ../layout

block extraHeaders
    link(rel="stylesheet", href="/css/admin/addUser.css")
    script(src="/js/admin/addUser.js")

block content
    div#main.ui.three.column.grid
        div.column
        div#centerCol.column
            form.ui.form(method="post")
                h4.ui.dividing.header Ajout d'un utilisateur
                div.required.field
                    label Role du nouvel utilisateur
                    //TODO: is is usefull to query the DB to get roles or hard code is enough
                    select(name="role").ui.dropdown
                        option(value="") Role
                        option(value="1") Chauffeur de bus
                        option(value="2") Administrateur de zone
                        option(value="3") Administrateur system
                div.required.field
                    label Nom d'utilisateur
                    class.ui.input
                        input(name="username")
                //TODO: check if passwords are the same during the input 
                //(not having to confirm to see if its good or not)
                div.required.field
                    label Mot de passe
                    class#password1.ui.input
                        input(name="password")
                div.required.field
                    label Confirmer le mot de passe
                    class#password2.ui.input
                        input(name="passwordConfirmation")
                div.field
                    label Email
                    class.ui.input
                        input(name="email")
                //TODO: hide if role is sysadmin
                div.required.field
                    label Selectionnez la zone 
                    select#zoneDropdown.ui.dropdown(name="zoneDropdown")
                        option(value="")= "Zone"                    
                div.field        
                    class.ui.checkbox
                        input(name="passwordReset", type="checkbox")
                        label Changer de mot de passe lors de la premi√®re connexion
                //TODO: afficher (ou activer) le bouton qu'une fois que tout est rempli
                div.field
                    button.ui.button Ajouter
                
        div.column
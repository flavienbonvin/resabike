extends layout

block extraHeadersAdmin
    link(rel="stylesheet", href="/css/admin/index.css")
    script(src="/js/admin/index.js")

block contentAdmin
    h4.ui.dividing.header Liste des zones
    button.ui.button(onClick="location.href = '/admin/zone'") Ajouter une zone
    //TODO: faire un espace pour que Ã§a soit joli
    div#listZone
        each zone in listZone
            h4.ui.dividing.header= zone.name
            div.ui.middle.aligned.divided.list
                each line in zone.lines
                    div.item 
                        div.content ligne no#{line.id} (#{line.startStation.name} - #{line.endStation.name})

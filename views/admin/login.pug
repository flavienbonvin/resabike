extends ../layout

block extraHeaders
    link(rel="stylesheet", href="/css/admin/index.css")
    script(src="/js/admin/index.js")

block content
    div.ui.two.column.centered.grid
        div.column 
            h4.ui.dividing.header= langs.titleLogin
            form.ui.form(method="post",action="/"+langUsed+"/admin/login")
                div.required.field
                    label= langs.labelUsername
                    class.ui.input
                        input(name="pseudo")
                div.required.field
                        label= langs.labelPassword 
                        class.ui.input
                            input(name="password")
                .field
                    button.ui.button= langs.labelConnect
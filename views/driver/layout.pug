extends ../layout

block extraHeaders
    link(rel="stylesheet", href="/css/driver/style.css")
    script(src="/js/driver/js.js")
    block extraHeadersDriver

block content
    div.ui.two.column.centered.grid
        div.column  
            div.ui.top.attached.menu 
                div(class="right menu")
                    div(class="item")
                        select.ui.dropdown(id="languageDropdown" onchange="changeLanguage(this)")
                            option(value="fr")= langs.langFrench
                            option(value="de")= langs.langGerman
                            option(value="en")= langs.langEnglish
                    div(class="item")
                        a(class="ui button", href="/" + langUsed + "/admin/logout")= langs.buttonLogout
            div.ui.attached.segment
                block contentDriver